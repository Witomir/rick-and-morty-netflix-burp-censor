{
    "name": "Netflix Rick and Morty burps censor",
    "description": "Mutes the audio when Rick burps",
    "version": "1.0",
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": true
    },
    "browser_action": {
        "name": "stryc",
        "default_icon": {
          "38": "icon.png"
        }
    },
    "permissions": [
        "tabs",
        "webNavigation",
        "http://*/",
        "https://*/"
    ],
    "manifest_version": 2,
    "content_scripts": [
        {
            "matches": ["https://www.netflix.com/*"],
            "js": [
                "netflix.js"
            ]
        }
    ]
}
